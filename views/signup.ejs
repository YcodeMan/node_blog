<head>
    <meta charset="utf-8">
    <title>注册</title>
    <link rel="stylesheet" href="/stylesheets/bootstrap.css">
    <script src="/javascripts/jquery.min.js"></script>
    <script src="/javascripts/bootstrap.min.js"></script>
    <script src="/javascripts/jquery.validate.min.js"></script>
    <script src="/javascripts/signup.js"></script>
</head>

<!-- 注册面板 -->
<div class="container">
    <h1 class="text-center text-danger">用户注册</h1><br>
    <form id="signupForm" class="form-horizontal">
        <div class="form-group">
            <label class="col-sm-3 control-label" for="username">用户名：</label>
            <div class="col-sm-5">
                <input class="form-control" id="username" name="username" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="password">密码：</label>
            <div class="col-sm-5">
                <input class="form-control" id="password" name="password" type="password" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="confirm_password">确认密码：</label>
            <div class="col-sm-5">
                <input class="form-control" id="confirm_password" name="confirm_password" type="password" />
            </div>
        </div>
        <div class="form-group">
            <label class="col-sm-3 control-label" for="email">E-Mail：</label>
            <div class="col-sm-5">
                <input class="form-control" id="email" name="email" />
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-3 col-sm-5">
                <button class="btn btn-info  btn-block">注册</button>
            </div>
        </div>
    </form>
    <div class="col-sm-offset-5 col-sm-4">
        <a href="./sign_in" class="button">已有账号，去登录</a>
    </div>
    <!-- 模态框 -->
    <div class="modal fade bs-example-modal-sm" id="myModal" tabindex="-1" role="dialog"
        aria-labelledby="mySmallModalLabel">
        <div class="modal-dialog modal-sm" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    消息提示
                </div>
                <div class="modal-body"></div>
            </div>
        </div>
    </div>

</div>
<%- include('../components/base.ejs') -%>
<script src="/javascripts/user/addPost.js"></script>
<div class="container">
    <div class="col-md-3">
        <button class="btn btn-primary" id="returnIndex">返回上一层</button>
    </div>
    <div class="col-md-10">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h4>修改文章</h4>
            </div>
            <div class="panel-body">
                <form id="addPostForm" class="form-horizontal">
                    <div class="form-group">
                        <label for="article-title" class="col-sm-2 control-label">标题</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="article-title" placeholder="Title" name="title">
                        </div>
                    </div>    
                    <div class="form-group">
                        <label for="article-intro" class="col-sm-2 control-label">简介</label>
                        <div class="col-sm-8">
                            <textarea style="resize:none;overflow:hidden" placeholder="Intro" name="intro"
                                id="article-intro" cols="30" rows="5" class="form-control input_textarea"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="article-content" class="col-sm-2 control-label">内容</label>
                        <div class="col-sm-8 ">
                            <textarea style="resize:none;overflow:hidden" placeholder="Content" name="content"
                                id="article-content" cols="30" rows="15" class="form-control input_textarea"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-offset-2 col-sm-10">
                            <button type="submit" class="btn btn-primary">修改内容</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('../components/modalMsg.ejs') -%>